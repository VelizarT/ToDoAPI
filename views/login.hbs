{{#extend "stylesheets"}}
<link rel="stylesheet" href="/static/css/login-form.css"/>
{{/extend}}

<div id="login-cnt" class="">
    <h3>Log In</h3>
    <form id="login">
        <label>Username</label>
        <input type="text" placeholder="Enter e-mail" id="login-username" />
        <label>Password</label>
        <input type="text" placeholder="Enter password" id="login-password" />
        <button>Log In</button>
    </form>
    <a href="/signup">Sign up</a>
</div>

{{#extend "scripts"}}
    <script src="../static/js/escape.js"></script>
    <script src="../static/js/greeting-header.js"></script>
    <script src="../static/js/login.js"></script>
{{/extend}}